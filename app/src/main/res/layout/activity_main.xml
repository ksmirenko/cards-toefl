<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".layout.MainActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_main_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/primary"
        app:tabSelectedTextColor="@color/textActionBar"
        app:tabTextColor="@color/textActionBarDisabled"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_main_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tablayout_main_screen"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_training"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_fitness_center_white_24dp"
        app:fabSize="normal"/>
</RelativeLayout>
